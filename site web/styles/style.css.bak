@font-face {
  font-family: pixel;
  src: url(../font/DePixelBreit.ttf);
}

* {
  font-family: pixel;
  margin: 0;
  padding: 0;
}

body {
  position: relative;
  height: 100vh;
  /* overflow: hidden; */
}

footer {

  position: absolute;
  bottom: 0;
  width: 100%;
  right: 0;
  left: 0;
  text-align: center;
  color: white;

}

/*-----------------menu----------------------*/
.menu {
  font-size: 3em;

}

header {
  height: 100%;
  z-index: 999;
}

header h1 {
  margin-bottom: 5%;
  text-align: center;
  color: white;
  text-shadow: 5px 0 gray, 0px 0 white, 0 5px gray, 0 0px white,
    1px 1px black, -1px -1px black, 1px -1px black, -1px 1px black;
  padding: 5px;
}

header div button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: auto;
  list-style: none;
  border: 5px solid rgb(87, 86, 86);
  background-color: rgb(199, 199, 199);
  width: 600px;
  height: 100px;
  font-size: 0.7em;
}

header div button:hover {
  filter: invert();
  cursor: pointer;
  border-color: white;
  transition: 500ms;
}

.bg-video {

  width: 100vw;
  height: 100vh;
  object-fit: cover;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  z-index: -2;
  filter: blur(10px);

}

.black-block {
  background-color: black;
  width: 100%;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  position: absolute;
  z-index: -1;
  opacity: 65%;
}

.img-jouer {
  width: 65px;

}

.parametre {
  position: absolute;
  top: 0;
}

.img-parametre {
  width: 75px;
}

.img-propos {
  width: 50px;
  padding-right: 2%;
}

.back-button {
  font-size: 3em;
  width: 115px;
  border: 5px solid black;
  margin: 1%;
}

.back-button:hover {
  filter: invert();
  transition: 500ms;
}

.proposnous {
  position: absolute;
  top: 0;
}

.proposnous article h2 {
  font-size: 2.8em;
  display: inline-block;
}

.propos {
  display: flex;
  margin-left: 5%;
  margin-right: 5%;
}

.carte-propos {
  border: 5px black solid;
  padding: 10px;
  margin: 5px;
  background-color: #fff;
}

.carte-propos p {
  text-align: justify;
}

.para {
  margin-left: 40%;
  margin-right: 40%;

}

.para button {
  font-size: 2em;
  border: 5px black solid;
  text-align: center;
  margin: 5px;
  padding: 5px;

}

.para button :hover {
  filter: invert();
  cursor: pointer;
}

.propos-img {
  width: 100%;
}

.tutoriel {
  position: absolute;
  top: 0;
}

/*----------------game menu---------------------- */
.echap {
  position: absolute;
  top: 2%;
  left: 2%;
  border-style: none;
  background-color: transparent;

}

.echap :hover {
  filter: invert();
  cursor: pointer;

}

.menu-jeu {
  font-size: 3em;

}

.img-home {
  width: 120px;
}

.img-tuto {
  width: 100px;
}

@media screen and (max-height:500px) {
  h1 {
    font-size: 1em;
  }

  header div button {
    font-size: 0.7em;
    width: 340px;
  }

  .back-button {
    font-size: 2em;
    width: 100px;
    margin: 1%;
  }

  .menu {
    font-size: 2em;
    color: black;
  }
}

